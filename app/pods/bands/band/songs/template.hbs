{{page-title "Songs"}}
<div class="w-128">
  <h2>Les musiques de
    <span class="text-blue-500">{{this.model.name}}</span>
  </h2>
  {{#each this.model.songs as |song|}}
    <div class="flex justify-between">
      <div>
        {{song.title}}
        <span class="text-sm text-teal-200">by {{song.band.name}}</span>
      </div>
      <div class="flex">
        <StarRating
          @rating={{song.rating}}
          @item={{song}}
          @actionToUpdateRating={{this.updateRating}}
        >
          {{song.rating}}
        </StarRating>
      </div>
    </div>
  {{/each}}
  {{#if this.isAddingSong}}
    <form
      class="flex mt-2"
      {{on "submit" this.addSong}}
      {{on "reset" this.cancelSong}}
    >
      <Input
        @type="text"
        @value={{this.selectSong.title}}
        placeholder="Nouvelle musique"
      />

      <button
        type="submit"
        class="ml-4 btnPrimary disabled:opacity-50"
        disabled={{this.isAddButtonDisabled}}
      >
        Ajouter
      </button>
      <button type="reset" class="ml-4 btnSecondary">
        Annuler
      </button>
    </form>
  {{else}}
    <button type="button" class="btnIcon" {{on "click" (fn this.addingSong)}}>
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20">
        <path
          d="M11 9h4v2h-4v4H9v-4H5V9h4V5h2v4zm-1 11a10 10 0 1 1 0-20 10 10 0 0 1 0 20zm0-2a8 8 0 1 0 0-16 8 8 0 0 0 0 16z"
        ></path>
      </svg>
      Ajouter une musique
    </button>
  {{/if}}
</div>